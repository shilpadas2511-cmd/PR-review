--><project name="commonfacades_buildcallbacks">
    	
    <macrodef name="commonfacades_clean_classpath_file">
        		
        <sequential>
            			
            <copy failonerror="true" file="${ext.commonfacades.path}/.classpath" overwrite="true" tofile="${ext.commonfacades.path}/.classpath.edit">
                				
                <filterchain>
                    					
                    <linecontainsregexp negate="true">
                        						
                        <regexp pattern="^(\t\t\t\t|)$"/>
                          
                        <!-- added by script -->
                        					
                    </linecontainsregexp>
                    				
                </filterchain>
                			
            </copy>
            			
            <move failonerror="true" file="${ext.commonfacades.path}/.classpath.edit" overwrite="true" tofile="${ext.commonfacades.path}/.classpath"/>
            		
        </sequential>
        	
    </macrodef>
    	
    <macrodef name="commonfacades_after_clean">
        		
        <sequential>
            			
            <echo level="info" message="Generating .classpath file for commonfacades"/>
            			
            <create_extension_classpath_file extname="commonfacades"/>
            			
            <commonfacades_clean_classpath_file/>
            		
        </sequential>
        	
    </macrodef>
    	
    <!-- 
		Called whenever 'ant ear' is used. this callback can be used to modify the content of the ear file

		 ${ear.path}: 			path to ear
	-->
    	
    <macrodef name="commonfacades_before_ear">
        		
        <sequential>
            			
            <!-- you can do anything before the EAR file is being packed -->
            		
        </sequential>
        	
    </macrodef>
    
</project>
