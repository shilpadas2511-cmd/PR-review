<beans xmlns="http://www.springframework.org/schema/beans"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans.xsd">

    <alias name="defaultIbmCommonEntityAttributesGenerationStrategy"
      alias="ibmCommonEntityAttributesGenerationStrategy"/>
    <bean id="defaultIbmCommonEntityAttributesGenerationStrategy"
      class="com.ibm.commerce.appconfiguration.core.strategies.impl.DefaultIbmCommonEntityAttributesGenerationStrategy">
        <constructor-arg name="userService" ref="userService"/>
        <constructor-arg name="currentUserRuleDisabled"
          value="${ibm.commonappconfiguration.currentuser.rule.disabled}"/>
        <constructor-arg name="currentUserIdRuleDisabled"
          value="${ibm.commonappconfiguration.currentuser.id.rule.disabled}"/>
        <constructor-arg name="currentUserRolesRuleDisabled"
          value="${ibm.commonappconfiguration.currentuser.roles.rule.disabled}"/>
    </bean>

    <alias name="defaultIbmCommonConfiguration" alias="ibmCommonConfiguration"/>
    <bean name="defaultIbmCommonConfiguration"
      class="com.ibm.commerce.appconfiguration.core.services.impl.DefaultIbmCommonConfiguration">
        <constructor-arg name="entityAttributesGenerationStrategy"
          ref="ibmCommonEntityAttributesGenerationStrategy"/>
        <constructor-arg name="apiKey" value="${ibm.commonappconfiguration.apiKey}"/>
        <constructor-arg name="guid" value="${ibm.commonappconfiguration.guid}"/>
        <constructor-arg name="appConfigRegion"
          value="${ibm.commonappconfiguration.appConfigRegion}"/>
        <constructor-arg name="collectionId" value="${ibm.commonappconfiguration.collectionId}"/>
        <constructor-arg name="environmentId" value="${ibm.commonappconfiguration.environmentId}"/>
        <constructor-arg name="entityId" value="${ibm.commonappconfiguration.entityId}"/>
    </bean>

    <alias name="defaultIbmCommonConfigurationService" alias="ibmCommonConfigurationService"/>
    <bean name="defaultIbmCommonConfigurationService"
      class="com.ibm.commerce.appconfiguration.core.services.impl.DefaultIbmCommonConfigurationService">
        <constructor-arg name="config" ref="ibmCommonConfiguration"/>
    </bean>
</beans>